{
    "name": "zorachka/http",
    "description": "Zorachka Http",
    "keywords": [
        "zorachka",
        "http",
        "application"
    ],
    "homepage": "https://github.com/zorachka/http",
    "require": {
        "php": "^8.1",
        "filp/whoops": "^2.15",
        "laminas/laminas-diactoros": "^2.7",
        "laminas/laminas-stdlib": "^3.6",
        "laminas/laminas-stratigility": "^3.9",
        "mezzio/mezzio": "^3.7",
        "mezzio/mezzio-fastroute": "^3.0.3",
        "mezzio/mezzio-helpers": "^5.7",
        "zorachka/container": "^3.1"
    },
    "license": "MIT",
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "authors": [
        {
            "name": "Siarhei Bautrukevich",
            "email": "hello@bautrukevich.com",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "Zorachka\\Http\\": "./src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Zorachka\\Http\\Tests\\": "./tests"
        }
    },
    "require-dev": {
        "dg/bypass-finals": "^1.4",
        "friendsofphp/php-cs-fixer": "^3.16",
        "phpstan/extension-installer": "^1.2",
        "phpstan/phpstan": "^1.10",
        "phpstan/phpstan-phpunit": "^1.3",
        "phpunit/phpunit": "^9.6"
    },
    "scripts": {
        "cs-lint": "php-cs-fixer fix --config=.php-cs-fixer.php --allow-risky=yes --dry-run --diff",
        "cs-fix": "php-cs-fixer fix --config=.php-cs-fixer.php --allow-risky=yes",
        "analyse": "phpstan analyse -c phpstan.neon",
        "test": "vendor/bin/phpunit --colors=always"
    }
}
